{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "yarn build",
    "beforeDevCommand": "yarn dev",
    "devPath": "http://localhost:5000",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "medical-sound-touch",
    "version": "0.1.0"
  },
  "tauri": {
    "allowlist": {
      "all": true,
      "dialog": {
        "all": true,
        "open": true,
        "save": true
      },
      "fs": {
				"all": true,
        "readFile": true,
        "writeFile": true,
        "readDir": true,
        "copyFile": true,
        "createDir": true,
        "renameFile": true,
				"scope": ["**", "$APP/*", "$DATA/*", "$DATA/images/*", "$DATA/souds/*"]
			},
      "globalShortcut": {
        "all": true
      },
			"path": {
				"all": true
			},
			"protocol": {
				"all": true,
        "asset": true,
				"assetScope": ["*", "$APP/*", "$DATA/*", "$DATA/images/*", "$DATA/souds/*"]
			},
      "window": {
        "all": true,
        "create": true,
        "center": true,
        "requestUserAttention": true,
        "setTitle": true,
        "minimize": true,
        "unminimize": true,
        "show": true,
        "hide": true,
        "close": true,
        "setAlwaysOnTop": true,
        "setSize": true,
        "setMinSize": false,
        "setMaxSize": false,
        "setPosition": true,
        "setFullscreen": false,
        "setFocus": true,
        "setIcon": true
      }
    },
    "bundle": {
      "active": true,
      "category": "DeveloperTool",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "medical-sound-touch",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "../src/assets/images",
        "../src/assets/sounds"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": "",
        "wix": {
          "template": "./wix/main.wxs"
        }
      }
    },
    "security": {
      "csp": "default-src: 'self'; img-src 'self' media-src 'self' asset: blob: data: filesystem: ws: wss: http: https: https://asset.localhost tauri: 'unsafe-eval' 'unsafe-inline' 'self'"
    },
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "theme": "Dark",
        "center": true,
        "decorations": false,
        "fullscreen": false,
        "height": 278,
        "resizable": false,
        "title": "Medical Sound Touch",
        "visible": false,
        "width": 1280
      },
      {
        "center": true,
        "decorations": false,
        "label": "splashscreen",
        "url": "splashscreen.html",
        "width": 400,
        "height": 200
      }
    ]
  }
}
